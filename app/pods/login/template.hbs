{{page-title 'Login'}}
<h1>Login</h1>
<div class='container col-8 col-md-6 col-lg-6'>
  <form {{on 'submit' this.onSubmit}}>
    <div class='mb-3 row'>
      <label for='staticLogin' class='col-sm-2 col-form-label'>Username</label>
      <div class='col-sm-10'>
        <input
          id='staticLogin'
          type='text'
          class='form-control'
          placeholder='username'
          {{on 'input' this.onLoginChange}}
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <label
        for='inputPassword'
        class='col-sm-2 col-form-label'
      >Password</label>
      <div class='col-sm-10'>
        <input
          id='inputPassword'
          type='password'
          class='form-control'
          placeholder='password'
          {{on 'input' this.onPasswordChange}}
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <button type='submit' class='btn btn-success'>Login</button>
    </div>
  </form>
  <div>
    <span>Don't have account? </span><LinkTo @route='register'>Register</LinkTo>
  </div>
</div>