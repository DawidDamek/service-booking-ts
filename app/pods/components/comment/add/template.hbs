<form {{on 'submit' @onSave}}>
  <div class='input-group mb-3'>
    <input
      id='inputComment'
      type='text'
      class='form-control'
      placeholder='comment'
      {{on 'input' @onInput}}
    />
    <Shared::Button
      class='btn-outline-light'
      @label='✖️'
      @onClick={{@onCancel}}
    />
    <Shared::Button
      class='btn-outline-light'
      @type='submit'
      @label='✔️'
      disabled={{@shouldBeDisabled}}
      @onClick={{@onSave}}
    />
  </div>
</form>