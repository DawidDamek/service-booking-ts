<li
  class='list-group-item d-flex justify-content-between align-items-center p-1'
>
  {{@issue.details}}

  <span class='select-container'>
    {{#if @isAdminView}}
      {{#if this.isEditing}}
        <PowerSelect
          @selected={{this.selected}}
          @options={{this.issueStatuses}}
          @onChange={{this.onChange}}
          as |issue|
        >
          {{issue}}
        </PowerSelect>
      {{else}}
        <span class='d-flex justify-content-end align-items-center'>
          <b class='mx-1'>{{@issue.status}}</b>
          <Shared::Button
            class='btn-sm btn-outline-light'
            @label='✏️'
            @onClick={{this.onEditStatus}}
          />
        </span>
      {{/if}}

    {{else}}
      <span class='d-flex justify-content-end align-items-center'>
        <b class='mx-1'>{{@issue.status}}</b>
        {{#if @isPossibleToDelete}}
          <Shared::Button
            class='btn-sm btn-secondary'
            @label='✕'
            @onClick={{this.onDeleteIssue}}
          />
        {{/if}}
      </span>
    {{/if}}
  </span>
</li>