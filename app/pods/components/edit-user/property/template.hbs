<form {{on 'submit' this.onSave}} data-test-user={{@property}}>
  <div class='input-group mb-3'>
    <span
      class='input-group-text w-25 text-wrap px-2'
      id='inputDescription'
    >{{@property}}</span>
    <input
      id='inputComment'
      class='form-control {{if this.shouldNotEdit "pe-none"}}'
      type='text'
      aria-describedby='inputDescription'
      value={{this.property}}
      {{on 'input' (fn this.onPropertyChange @property)}}
    />

    {{#if this.isEditable}}
      <Shared::Button
        class='btn-sm btn-outline-light'
        @label='✖️'
        @onClick={{this.onCancel}}
        data-test-button-cancel
      />
      <Shared::Button
        class='btn-sm btn-outline-light'
        @type='submit'
        @label='✔️'
        @onClick={{this.onSave}}
        data-test-button-save
      />
    {{else}}
      <Shared::Button
        id='button'
        class='btn-sm btn-outline-light'
        @label='✏️'
        @onClick={{this.onEditPropertySwitch}}
        data-test-button-edit
      />
    {{/if}}

  </div>
</form>